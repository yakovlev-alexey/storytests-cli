{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "moduleResolution": "node",
        "allowJs": false,
        "baseUrl": "./",
        "typeRoots": ["./@types"],
        "removeComments": true,
        "isolatedModules": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "resolveJsonModule": true
    },
    "include": ["**/*.ts"],
    "exclude": ["build", "node_modules"]
}
