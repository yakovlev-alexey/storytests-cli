{
    "name": "storytests-cli",
    "version": "0.0.1",
    "description": "CLI utility to generate tests from Storybook stories",
    "main": "dist/index.js",
    "repository": "https://github.com/yakovlev-alexey/storytests-cli",
    "author": "Alexey Yakovlev <alexeyyakovlev0359@gmail.com>",
    "license": "MIT",
    "private": false,
    "bin": {
        "storytests": "bin/cli.js"
    },
    "scripts": {
        "build": "node build.js",
        "clean": "rm -rf build",
        "lint": "npm-run-all lint:*",
        "lint:scripts": "eslint './**/*.{js,ts,tsx}'",
        "lint:types": "tsc --noEmit",
        "format": "prettier --write \"src/**/*.ts\""
    },
    "dependencies": {
